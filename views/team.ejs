<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="min-h-screen flex flex-col bg-base-100">
    <%- include('partials/nav') %>
    <main class="team-wrap container mx-auto p-6 flex-1">
      <h1 class="page-title"><%= title %></h1>
      <div class="overflow-x-auto mt-4">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Role</th>
              <th>Bat</th>
              <th>Bowl</th>
              <th>Matches</th>
              <th>Runs</th>
              <th>Wkts</th>
            </tr>
          </thead>
          <tbody>
            <% (Array.isArray(players) ? players : []).forEach(p => { %>
            <tr>
              <td><%= p.name %></td>
              <td><%= p.role %></td>
              <td><%= p.bat %></td>
              <td><%= p.bowl %></td>
              <td><%= p.matches %></td>
              <td><%= p.runs %></td>
              <td><%= p.wkts %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
  </body>
</html>
