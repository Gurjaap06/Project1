<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="min-h-screen flex flex-col bg-base-100">
    <%- include('partials/nav') %>
    <main class="container mx-auto p-6 flex-1">
      <h1 class="page-title"><%= title %></h1>
      <% const _players = Array.isArray(players) ? players : []; const totals =
      _players.reduce((a,p)=>({ matches: a.matches + (p.matches||0), runs:
      a.runs + (p.runs||0), wkts: a.wkts + (p.wkts||0) }),
      {matches:0,runs:0,wkts:0}); %>
      <div class="stats shadow mt-4">
        <div class="stat">
          <div class="stat-title">Total Matches</div>
          <div class="stat-value"><%= totals.matches %></div>
        </div>
        <div class="stat">
          <div class="stat-title">Total Runs</div>
          <div class="stat-value"><%= totals.runs %></div>
        </div>
        <div class="stat">
          <div class="stat-title">Total Wickets</div>
          <div class="stat-value"><%= totals.wkts %></div>
        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
  </body>
</html>
