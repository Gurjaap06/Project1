<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="min-h-screen flex flex-col bg-base-100">
    <%- include('partials/nav') %>

    <main class="container mx-auto p-6 flex-1">
      <section class="prose">
        <h1 class="page-title"><%= title %></h1>
        <p>Train hard. Play harder. Fixtures, results, and photos live here.</p>
        <div class="mt-4">
          <a class="btn btn-primary">Join Us</a>
        </div>
      </section>

      <div class="mt-8">
        <h2 class="text-xl font-semibold mb-3">Announcements</h2>
        <div class="space-y-3">
          <% (Array.isArray(news) ? news : []).slice(0,2).forEach(n => { %>
          <div class="alert">
            <span><strong><%= n.title %></strong> â€” <%= n.excerpt %></span>
          </div>
          <% }) %>
        </div>
      </div>

      <div class="mt-8">
        <h2 class="text-xl font-semibold mb-3">Next Fixtures</h2>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Opponent</th>
                <th>Ground</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <% fixtures.slice(0,3).forEach(f => { %>
              <tr>
                <td><%= f.date %></td>
                <td><%= f.opp %></td>
                <td><%= f.ground %></td>
                <td><%= f.time %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
  </body>
</html>
